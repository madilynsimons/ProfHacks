{
  	"name": "Project Watermelon",
  	"version": "0.1",
  	"manifest_version": 2,
  	"description": "Alerts the user of many websites that can be biased or consider fake news.",
  	"browser_action": {
  		"default_icon": "icon.png",
  		"default_title": "Project Watermelon 2017"
  	},
  	"content_security_policy": "script-src 'self' https://www.google.com; object-src 'self'",
  	"icons": {
  		"128": "icon.png"
	},
  "background":{
    "scripts": ["background.js"]
  },
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": [
          "src/inject/inject.js"
        ]
      }
    ]
}
